<p>
  <strong><%= comment.commenter %> said:</strong> '<%= comment.body %>'

  <% if current_user.admin or current_user == comment.commenter %>
    <%= link_to 'Delete Comment', [comment.listing, comment],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>
