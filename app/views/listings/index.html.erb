<h1>All Listings</h1>

<table>
  <tr>
    <th>Front</th>
    <th>Back</th>
    <th>Status</th>
    <th>Listed</th>
    <th>Card</th>
    <th>Edition</th>
    <th>Grade</th>
    <th>Average</th>
    <th>Graders</th>
    <th>Differential</th>
    <th>Price</th>
    <th>Listed By</th>
  </tr>

  <% @listings.each do |listing| %>
    <tr>
      <td>
        <img src=" <%= listing.image_front %>" width="50px" alt="<%= listing.card %>">
      </td>
      <td>
        <img src=" <%= listing.image_back %>" width="50px" alt="<%= listing.card %>">
      </td>
      <td>
        <% if listing.status == true %>
          Active
        <% else %>
          Closed
        <% end %>
      </td>
      <td><%= listing.created_at.strftime("%B %d, %Y") %></td>
      <td>
        <strong>
          <%= listing.card %> (<%= listing.card_type %>)
        </strong>
      </td>
      <td>
        <%= listing.edition %>
      </td>
      <td>
        <% if listing.condition == 1 %>
          NM
        <% elsif listing.condition == 2 %>
          SP
        <% elsif listing.condition == 3 %>
          MP
        <% elsif listing.condition == 4 %>
          HP
        <% else %>
          N/A
        <% end %>
      </td>
      <td>
        <% if listing.poll.average('response').round == 1 %>
          NM
        <% elsif listing.poll.average('response').round == 2 %>
          SP
        <% elsif listing.poll.average('response').round == 3 %>
          MP
        <% elsif listing.poll.average('response').round == 4 %>
          HP
        <% else %>
          N/A
        <% end %>
      </td>
      <td><%= listing.poll.length %></td>
      <td><%= listing.condition - listing.poll.average('response').round %></td>
      <td>$<%= listing.price %></td>
      <td><%= listing.user.username %></td>
      <td><%= link_to 'View', listing %></td>
      <td>
        <% if current_user.admin %>
          <%= link_to 'Edit', edit_listing_path(listing) %>
        <% end %>
      </td>
      <td>
        <% if current_user.admin %>
          <%= link_to 'Delete', listing_path(listing),
            method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
