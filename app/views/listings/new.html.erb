<h1>New Listing</h1>

<%= form_for :listing, url: listings_path do |f| %>
  <p>
    <%= f.label :card %>
    <br>
    <%= f.text_field :card %>
  </p>

  <p>
    <%= f.label :edition %>
    <br>
    <%= f.text_field :edition %>
  </p>

  <p>
    <%= check_box_tag(:type) %>
    <%= label_tag(:type, "Foil") %>
    <br>
  </p>

  <p>
    <%= radio_button_tag(:condition, "Near Mint") %>
    <%= label_tag(:condition, "Near Mint") %>
    <br>

    <%= radio_button_tag(:condition, "Slightly Played") %>
    <%= label_tag(:condition, "Slightly Played") %>
    <br>

    <%= radio_button_tag(:condition, "Moderately Played") %>
    <%= label_tag(:condition, "Moderately Played") %>
    <br>

    <%= radio_button_tag(:condition, "Heavily Played") %>
    <%= label_tag(:condition, "Heavily Played") %>
    <br>
  </p>

  <p>
    <%= f.label :quantity %><br>
    <%= f.text_field :quantity %>
  </p>

  <p>
    <%= f.label :price %>
    <br>
    <%= f.text_field :price %>
    <br>
  </p>

  <p>
    <%= f.label :description %>
    <br>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :image_front %>
    <br>
    <%= url_field(:listing, :image_front) %>
  </p>

  <p>
    <%= f.label :image_back %>
    <br>
    <%= url_field(:listing, :image_back) %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
