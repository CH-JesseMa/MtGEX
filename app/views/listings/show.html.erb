<p>
  <% if current_user.admin || current_user == @listing.user %>
    <%= link_to 'Edit Listing', edit_listing_path(@listing) %>
  <% end %>
  <% if current_user.admin %>
    <%= link_to 'Delete', listing_path(@listing),
      method: :delete, data: { confirm: 'Are you sure?' } %>
  <% end %>
</p>

<p>
  <strong>Condition (according to seller):</strong>
  <% if @listing.condition == 1 %>
    Near Mint
  <% elsif @listing.condition == 2 %>
    Slightly Played
  <% elsif @listing.condition == 3 %>
    Moderately Played
  <% elsif @listing.condition == 4 %>
    Heavily Played
  <% else %>
    Not Graded
  <% end %>
</p>

<p>
  <strong>Average Grade Rating (based on <%= @listing.poll.length %> ratings): </strong>
   <% if @listing.poll.sum('response') == 1 %>
    Near Mint
  <% elsif @listing.poll.sum('response') == 2 %>
    Slightly Played
  <% elsif @listing.poll.sum('response') == 3 %>
    Moderately Played
  <% elsif @listing.poll.sum('response') == 4 %>
    Heavily Played
  <% else %>
    Not Graded
  <% end %>
</p>

<p>
<strong>Grade card:</strong>
<%= render "polls/form" %>
</p>

<p>
  <img src=" <%= @listing.image_front %>" width="200px" alt="<%= @listing.card %>">
  <img src=" <%= @listing.image_back %>" width="200px" alt="<%= @listing.card %>">
</p>

<h2><%= @listing.card %></h2>
<p>
  <strong>Seller:</strong>
  <%= @listing.user.username %>
</p>
<p>
  <strong>Listed on:</strong>
  <%= @listing.created_at.strftime("%B %d, %Y at %I:%M %p") %>
</p>
<p>
  <strong>Edition:</strong>
  <%= @listing.edition %>
</p>

<p>
  <strong>Type:</strong>
  <%= @listing.card_type %>
</p>

<p>
  <strong>Price:</strong>
  <%= @listing.price %>
</p>

<p>
  <strong>Description:</strong>
  <%= @listing.description %>
</p>

<h4>Comments</h4>
<%= render @listing.comments %>

<h4>Add a comment:</h4>
<%= render "comments/form" %>

